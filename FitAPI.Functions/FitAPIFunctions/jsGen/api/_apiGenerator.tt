<#+
private class APITemplate : Template
{
    public APITemplate(Database db, Schema[] sorted, string className)
        {
            // Build the list of store imports
            System.Collections.Generic.List<string> storeImports = new System.Collections.Generic.List<string>();
            foreach (Schema sSchema in sorted)
            {
                string storeName = "use" + sSchema.Name + "Store";
                string storeFile = sSchema.Name.Substring(0,1).ToLower() + sSchema.Name.Substring(1) + "Store";
                storeImports.Add("import { " + storeName + " } from 'stores/" + storeFile + "'");
            }

            string strFile = string.Join("\n", storeImports) + @"

export default function " + className.ToLower() + @"Setup(" + className.ToLower() + @"Values) {";
            foreach (Schema sSchema in sorted)
            {
                string storeName = "use" + sSchema.Name + "Store";
                string storeVar = sSchema.Name.Substring(0,1).ToLower() + sSchema.Name.Substring(1) + "Store";
                strFile += @"
  const " + storeVar + @" = " + storeName + @"()";
                Table[] tTables = (from Table tTable in db.Tables where tTable.Schema == sSchema.Name select tTable).ToArray();
                foreach (Table tTable in tTables)
                {
                    if (!(tTable.Name == "Active" || tTable.Name == "Dates" || tTable.Name == "Time"))
                    {
                        strFile += @"
  " + storeVar + @".set" + tTable.Name + @"List(" + className.ToLower() + @"Values." + tTable.Name + @")";
                    }
                }
            }
            strFile += @"
}
";
            this.FileName = strFile;

        }
    private string FileName {get; set;}
    public override string TransformText()
    {
        #><#=this.FileName#><#+
        return this.GenerationEnvironment.ToString();
    }
}
